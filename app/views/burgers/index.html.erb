<p id="notice"><%= notice %></p>

<h1>Burgers</h1>

<div class="addBurger">
  <%= render 'form', burger: @burger %>
</div>

    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Devoured</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @burgers.each do |burger| %>
          <% if burger.devoured == false %>
            <tr>
              <td><%= burger.name %></td>
              <td><%= burger.devoured %></td>
              <td><%= link_to 'Show', burger %></td>
              <td><%= link_to 'Edit', edit_burger_path(burger) %></td>
              <td><%= link_to 'Destroy', burger, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>

  <br>

    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Devoured</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @burgers.each do |burger| %>
          <% if burger.devoured == true %>
            <tr>
              <td><%= burger.name %></td>
              <td><%= burger.devoured %></td>
              <td><%= link_to 'Show', burger %></td>
              <td><%= link_to 'Edit', edit_burger_path(burger) %></td>
              <td><%= link_to 'Destroy', burger, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>

